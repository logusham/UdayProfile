<!-- Experience Card Component -->
<div class="card experience-card h-100 border-0 shadow-sm">
    <div class="card-body">
        <div class="d-flex align-items-start mb-3">
            <div class="bg-primary bg-opacity-10 text-primary p-2 rounded me-3">
                <i class="@Icon fs-4"></i>
            </div>
            <div>
                <h3 class="h5 mb-1">@Title</h3>
                <p class="text-muted mb-2">@Company | @Period</p>
            </div>
        </div>
        <ul class="mb-0">
            @foreach (var point in Points.Split(";"))
            {
                <li class="mb-2">@point</li>
            }
        </ul>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Company { get; set; }
    [Parameter] public string Period { get; set; }
    [Parameter] public string Points { get; set; }
    [Parameter] public string Icon { get; set; } = "bi bi-briefcase-fill";
}